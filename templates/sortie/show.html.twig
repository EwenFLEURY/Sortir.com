{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">

        <h1 class="text-center mb-5">Afficher une sortie</h1>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="mb-3">
                    <strong>Nom de la sortie :</strong> {{ sortie.nom }}
                </div>
                <div class="mb-3">
                    <strong>Date et heure de la sortie :</strong> {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}
                </div>
                <div class="mb-3">
                    <strong>Date limite d'inscription :</strong> {{ sortie.dateLimiteInscription|date('d/m/Y') }}
                </div>
                <div class="mb-3">
                    <strong>Nombre de places :</strong> {{ sortie.nbInscriptionMax }}
                </div>
                <div class="mb-3">
                    <strong>Dur√©e :</strong> {{ sortie.duree }} minutes
                </div>
                <div class="mb-3">
                    <strong>Description et infos :</strong> {{ sortie.infosSortie }}
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="mb-3">
                    <strong>Lieu :</strong> {{ sortie.lieu.nom }}
                </div>
                <div class="mb-3">
                    <strong>Rue :</strong> {{ sortie.lieu.rue }}
                </div>
                <div class="mb-3">
                    <strong>Ville :</strong> {{ sortie.lieu.ville.nom }}
                </div>
                <div class="mb-3">
                    <strong>Code postal :</strong> {{ sortie.lieu.ville.codePostal }}
                </div>
                <div class="mb-3">
                    <strong>Latitude :</strong> {{ sortie.lieu.latitude }}
                </div>
                <div class="mb-3">
                    <strong>Longitude :</strong> {{ sortie.lieu.longitude }}
                </div>
            </div>
        </div>

        <div class="mt-5">
            <h3 class="text-center mb-4"><strong>Liste des participants inscrits :</strong></h3>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark text-center">
                    <tr>
                        <th>Pseudo</th>
                        <th>Nom</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for participant in participants %}
                        <tr>
                            <td>{{ participant.username }}</td>
                            <td>{{ participant.nom }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" class="text-center text-muted">Aucun participant inscrit</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}
