{% extends 'base.html.twig' %}
 {% block body %}
     {{ form_start(siteForm, {'attr': {'class': 'container mt-5'}}) }}
     <h1 class="mb-4">Modifier un site</h1>
     <div class="row">
         <div class="col-6">
             <div class="col-md-6 mb-3">
                 {{ form_row(siteForm.nom) }}
             </div>
         </div>
         <div class="col-6">
             <div class="col-md-6 d-flex gap-2 mt-4">
                 <button type="submit" name="enregistrer" class="btn btn-primary">Modifier</button>
                 <a href="{{ path('sites_list') }}" class="btn btn-secondary">Annuler</a>
             </div>
         </div>
     </div>
     {{ form_end(siteForm) }}
 {% endblock %}