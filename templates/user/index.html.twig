{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">Administration des utilisateurs</h1>
        <a href="{{ path('users_create') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Nouvel utilisateur
        </a>
    </div>

    {% if users is empty %}
        <div class="alert alert-info">Aucun utilisateurs trouvé.</div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Actif</th>
                    <th scope="col" class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ user.prenom }}</td>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.actif ? 'Actif' : 'Désactiver' }}</td>
                        <td class="text-end">
                            <div class="" role="group" aria-label="Actions">
                                <a href="{{ path('users_view', { id: user.id }) }}" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-eye"></i> Voir
                                </a>
                                {% if app.user != user %}
                                    {% if user.actif %}
                                        <form
                                                action="{{ path('users_disable', { id: user.id }) }}"
                                                method="post"
                                                class="d-inline"
                                        >
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-x-circle"></i> Désactiver
                                            </button>
                                        </form>
                                    {% else %}
                                        <form
                                                action="{{ path('users_enable', { id: user.id }) }}"
                                                method="post"
                                                class="d-inline"
                                        >
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-success">
                                                <i class="bi bi-check-lg"></i> Activer
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form
                                            action="{{ path('users_delete', { id: user.id }) }}"
                                            method="post"
                                            class="d-inline"
                                            onsubmit="return confirm('Voulez-vous supprimer {{ user.prenom }} {{ user.nom }}?');"
                                    >
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}