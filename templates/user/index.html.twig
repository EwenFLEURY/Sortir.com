{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/users/import_csv.js') }}" defer></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('styles/tableau.css') }}">
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center m-3">
        <h1 class="h3">Administration des utilisateurs {{ '(%s utilisateurs) '|format(users|length)}}</h1>
        <div class="text-end">
            <a href="{{ path('users_create') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Nouvel utilisateur
            </a>
            <a  class="btn btn-success" href="{{ asset('modelUser.csv') }}"><i class="bi bi-filetype-csv"></i> Télécharger le model CSV</a>
            <button id="csv-trigger" class="btn btn-secondary" data-upload-url="{{ path('users_import') }}" data-csrf="{{ csrf_token('import_csv_users') }}">
                Importer un CSV
            </button>

            <input id="csv-input" type="file" accept=".csv,text/csv" hidden/>

            <div id="csv-status" aria-live="polite"></div>
        </div>
    </div>

    {% if users is empty %}
        <div class="alert alert-info">Aucun utilisateur trouvé.</div>
    {% else %}
        <div class="container">
            <div class="table-container-max table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Nom d'utilisateur</th>
                        <th>Email</th>
                        <th>Actif</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ loop.index }}</th>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.actif ? 'Actif' : 'Désactiver' }}</td>
                            <td class="text-end">
                                <div aria-label="Actions">
                                    <a href="{{ path('users_view', { id: user.id }) }}" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-eye"></i> Voir
                                    </a>
                                    {% if app.user != user %}
                                        {% if user.actif %}
                                            <form action="{{ path('users_disable', { id: user.id }) }}" method="post" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-x-circle"></i> Désactiver
                                                </button>
                                            </form>
                                        {% else %}
                                            <form action="{{ path('users_enable', { id: user.id }) }}" method="post" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-check-lg"></i> Activer
                                                </button>
                                            </form>
                                        {% endif %}
                                        <form action="{{ path('users_delete', { id: user.id }) }}" method="post" class="d-inline" onsubmit="return confirm('Voulez-vous supprimer {{ user.username }} ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Supprimer
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}