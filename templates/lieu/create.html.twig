{% extends 'base.html.twig' %}
 {% block body %}
     {{ form_start(lieuForm, {'attr': {'class': 'container mt-5'}}) }}
     <h1 class="mb-4">Cr√©er un lieu</h1>
     <div class="row">
         <div class="col-6">
             <div class="col-md-6 mb-3">
                 {{ form_row(lieuForm.nom) }}
             </div>
             <div class="col-md-6 mb-3">
                 {{ form_row(lieuForm.rue) }}
             </div>
             <div class="col-md-6 mb-3">
                 {{ form_row(lieuForm.ville) }}
             </div>
         </div>
         <div class="col-6">
             <div class="col-md-6 mb-3">
                 {{ form_row(lieuForm.latitude) }}
             </div>
             <div class="col-md-6 mb-3">
                 {{ form_row(lieuForm.longitude) }}
             </div>
         </div>
     </div>
     <div class="d-flex justify-content-center gap-3 mt-4">
         <button type="submit" name="enregistrer" class="btn btn-primary">Enregistrer</button>
         <a href="{{ path('lieux_list') }}" class="btn btn-secondary">Annuler</a>
     </div>
     {{ form_end(lieuForm) }}
 {% endblock %}

